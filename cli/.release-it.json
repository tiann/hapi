{
    "git": {
        "commitMessage": "Release version ${version}",
        "tagName": "v${version}",
        "push": true,
        "requireCleanWorkingDir": true,
        "requireBranch": "main",
        "addUntrackedFiles": false
    },
    "github": {
        "release": false
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": "node .release-it.notes.js ${latestTag} ${version} > ../RELEASE_NOTES.md && git add ../RELEASE_NOTES.md"
    }
}
