{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "es2020",
      "es2022"
    ],
    "jsx": "react",
    "rootDir": "..",
    "experimentalDecorators": true,
    "outDir": "dist",
    "noEmit": true,
    "types": [
      "node",
      "bun-types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "../server/src/**/*.ts",
    "../server/src/**/*.d.ts"
  ]
}
